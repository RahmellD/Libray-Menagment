generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Book {
  id           Int            @id @default(autoincrement())
  title        String
  genre        String
  price        Float
  author_name  String
  published    DateTime
  imageUrl     String
  borrowedBook BorrowedBook[]
}

model User {
  id            Int            @id @default(autoincrement())
  name          String
  email         String         @unique
  password      String
  role          Role           @default(Costumer)
  borrowedBooks BorrowedBook[]
}

model BorrowedBook {
  id         Int      @id @default(autoincrement())
  userId     Int
  bookId     Int      @unique
  returndate DateTime
  user       User     @relation(fields: [userId], references: [id])
  book       Book     @relation(fields: [bookId], references: [id])
}

enum Role {
  Admin
  Costumer
}
